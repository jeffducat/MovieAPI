<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="../Content/OurStyle.css" />

</head>
<body>   
    <div style="background-color:black" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("@YFMDb", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <div class="dropdown navbar-link">
                                <span>Menu</span>
                                <div class="dropdown-content">
                                    @Html.ActionLink("Search Movies", "Index", "Search")<br />
                                    @Html.ActionLink("View Favorites", "Movies", "User")
                                </div>
                            </div>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>

    <div class="wrapper body-content">
        <div class="contentWrapper">
            <div class="transBackground">
                @RenderBody()
            </div>
            <iframe src="https://open.spotify.com/embed/playlist/1VHaEzv3qjaDBAVJrEGEge"
                    class="musicPlayer"
                    width="300" height="90" frameborder="0"
                    allowtransparency="true" allow="encrypted-media"></iframe>
            <hr />
            <footer>
                <p style="color:white;">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
